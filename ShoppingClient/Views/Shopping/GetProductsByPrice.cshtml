@model IEnumerable<ShoppingClient.ShoppingServiceReference.Product>

@{ Layout = null; }


@{
    ViewBag.Title = "GetProductsByPrice";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<nav class="navbar navbar-expand-lg navbar-light shadow-sm">
    <a class="navbar-brand" href="@Url.Action("Home", "Shopping")">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="@Url.Action("Products", "Shopping")">Products</a>
            <a class="nav-item nav-link" href="@Url.Action("Users", "Shopping")">Users</a>
            <a class="nav-item nav-link" href="@Url.Action("UserInfos", "Shopping")">User Info</a>
            <a class="nav-item nav-link" href="@Url.Action("Logout", "Shopping")">Logout</a>
        </div>
    </div>
</nav>

<h2>GetProductsByPrice</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier)
            </td>
        </tr>
    }

</table>
